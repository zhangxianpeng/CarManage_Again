<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.cm.activity.Register">


    <EditText
        android:id="@+id/et_phone_register"
        style="@style/margin_h"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/input_white_padding"
        android:gravity="center_vertical"
        android:inputType="number"
        android:hint="手机号"
        android:padding="5dp"
        android:textColor="@color/base_color_666"
        android:textColorHint="@color/base_color_999"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_phone"
        android:textSize="@dimen/common_small_fonts" />

    <EditText
        android:id="@+id/et_pwd_register"
        style="@style/margin_h"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_phone_register"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_white_padding"
        android:gravity="center_vertical"
        android:hint="密码"
        android:padding="5dp"
        android:textColor="@color/base_color_666"
        android:textColorHint="@color/base_color_999"
        android:textSize="@dimen/common_small_fonts" />

    <EditText
        android:id="@+id/et_pwd_copy"
        style="@style/margin_h"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_below="@+id/et_pwd_register"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_white_padding"
        android:gravity="center_vertical"
        android:hint="重复密码"
        android:padding="5dp"
        android:textColor="@color/base_color_666"
        android:textColorHint="@color/base_color_999"
        android:textSize="@dimen/common_small_fonts" />

    <Button
        android:id="@+id/btn_ok_register"
        style="@style/margin_h"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_pwd_copy"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_common_selector"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/common_big_fonts" />


</RelativeLayout>
